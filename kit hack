-- Criar um kit de ferramentas
local toolKit = Instance.new("Folder")
toolKit.Name = "ToolKit"
toolKit.Parent = game.Players.LocalPlayer.Backpack

-- Função para criar uma ferramenta de raio
local function createLaserTool()
    local tool = Instance.new("Tool")
    tool.Name = "LaserTool"
    tool.RequiresHandle = true

    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(1, 5, 1)
    handle.Anchored = false
    handle.CanCollide = false
    handle.BrickColor = BrickColor.new("Bright orange")
    handle.Parent = tool

    tool.Equipped:Connect(function()
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
        local startPosition = humanoidRootPart.Position
        local direction = humanoidRootPart.CFrame.LookVector

        local ray = Ray.new(startPosition, direction * 100)
        local hit, position = workspace:FindPartOnRay(ray, character)

        if hit then
            print("Raio atingiu: " .. hit.Name)
            -- Efeitos adicionais aqui
        else
            print("Raio não atingiu nada.")
        end
    end)

    return tool
end

-- Função para criar uma espada
local function createSword()
    local tool = Instance.new("Tool")
    tool.Name = "Sword"
    tool.RequiresHandle = true

    local handle = Instance.new("Part")
    handle.Name = "Handle"
    handle.Size = Vector3.new(1, 5, 1)
    handle.Anchored = false
    handle.CanCollide = false
    handle.BrickColor = BrickColor.new("Bright blue")
    handle.Parent = tool

    tool.Activated:Connect(function()
        print("Espada ativada!")
        -- Adicione lógica de ataque aqui
    end)

    return tool
end

-- Função para criar um jetpack
local function createJetpack()
    local tool = Instance.new("Tool")
    tool.Name = "Jetpack"
    tool.RequiresHandle = false

    tool.Activated:Connect(function()
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local humanoid = character:FindFirstChildOfClass("Humanoid")

        if humanoid then
            humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            character:Move(Vector3.new(0, 50, 0), true) -- Move para cima
            print("Usando jetpack!")
        end
    end)

    return tool
end

-- Adicionar ferramentas ao kit
createLaserTool().Parent = toolKit
createSword().Parent = toolKit
createJetpack().Parent = toolKit

print("Kit de ferramentas criado!")
